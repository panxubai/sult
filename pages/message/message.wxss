/* pages/message/message.wxss */
.container{
  box-shadow: 0 4rpx 8rpx 0 rgba(0,0,0,0.10) inset;
}
.messageMain{
  width: 100%;
  box-sizing: border-box;
  padding-left:40rpx;
}
.systemNew,.journey,.usenet,.visit{
  width: 100%;
  height: 140rpx;
  position: relative;
}
.messageImg{
  width:112rpx;
    float: left;
}
 .messageImg .ic_message{
  width: 80rpx;
  height: 80rpx;
  margin-top: 40rpx;
}
.messageView{
  width: 560rpx;
  float: left;
  padding: 40rpx 0;
  border-bottom: 1px solid #dddddd;
}
 .messageView p{
  display: block;
  font-size: 32rpx;
color: #222222;
  line-height: 50rpx;
  margin-top:10rpx;
}
.systemNew a,.journey a,.usenet a,.visit a{
  display: block;
  width: 40rpx;
  height: 40rpx;
  background: #FE2C54;
  border-radius: 50%;
  font-size: 24rpx;
color: #FFFFFF;
letter-spacing: 0;
line-height: 40rpx;
position: absolute;
top: 55rpx;
right: 84rpx;
text-align: center;
}
.ic_more{
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  right: 32rpx;
  top:53rpx;
}