/* 顶部要固定定位   标题要居中   自定义按钮和标题要和右边微信原生的胶囊上下对齐 */
.nav-wrap {
  position: fixed;
  width: 100%;
  top: 0;
  background: #fff;
  color: #000;
  z-index: 9999999;
}
/* 标题要居中 */
.nav-title {
  position: absolute;
  text-align: center;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  font-size: 36rpx;
  color: #2c2b2b;
  font-weight: 600;
}

.nav-capsule {
  display: flex;
  height: 30px;
  align-items: center;
  margin-left: 30rpx;
  width: 160rpx;
  justify-content: space-between;
  border: 1rpx solid #e5e5e5;
  border-radius: 60rpx;
}

.navbar-v-line {
  width: 1rpx;
  height: 32rpx;
  background-color: #e5e5e5;
}
.back-pre{
  margin-left: 15rpx;
}
 .back-home {
   margin-right: 15rpx;
 }
.back-pre, .back-home {
  width: 30rpx;
   height: 30rpx;
  margin-top: 9rpx;
  padding: 10rpx;
}

